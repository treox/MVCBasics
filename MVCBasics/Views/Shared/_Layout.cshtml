<!DOCTYPE html>

<html lang="en">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <link href="~/styles.css" rel="stylesheet" />
</head>
<body>
    <header>
        <h1 id="logo">Logo</h1>
        <nav>
            <ul>
                <li class="nav-item">@Html.ActionLink("About", "About", "Home")</li>
                <li class="nav-item">@Html.ActionLink("Contact", "Contact", "Home")</li>
                <li class="nav-item">@Html.ActionLink("Projects", "Projects", "Home")</li>
                <li class="nav-item">@Html.ActionLink("Fever Check", "FeverCheck", "Doctor")</li>
                <li class="nav-item">@Html.ActionLink("Guessing Game", "GuessingGame", "Game")</li>
                <li class="nav-item">@Html.ActionLink("Aktivera session (Game)", "SetSessionForGame", "Game")</li>
                <li class="nav-item">@Html.ActionLink("High scores", "HighScores", "Game")</li>
            </ul>
        </nav>
    </header>

    <div>
        @RenderBody()
    </div>

    <footer>
        <p>Tero Viitala @DateTime.Now.ToShortDateString()</p>
    </footer>

    <script src="~/main.js" type="text/javascript"></script>
</body>
</html>
